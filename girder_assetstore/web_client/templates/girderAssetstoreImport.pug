.g-body-title Import existing data from remote Girder instance
.g-body-subtitle= assetstore.get('name')

.g-import-instructions.
  Use this to import files from a remote Girder assetstore.

form.g-gas-import-form
  .form-group
    label(for="g-gas-import-path") Import path (relative to #[i #{metadata.prefix}])
    input#g-gas-import-path.form-control.input-sm(type="text")
  .form-group
    label(for="g-gas-import-dest-type") Destination type
    select#g-gas-import-dest-type.form-control
      option(value="folder", selected=true) Folder
      option(value="user") User
      option(value="collection") Collection
  .form-group
    label(for="g-gas-import-dest-id") Destination ID
    .input-group.input-group-sm
      input#g-gas-import-dest-id.form-control.input-sm(
          type="text",
          placeholder="Existing folder, user, or collection ID to use as the destination")
      .input-group-btn
        button.g-open-browser.btn.btn-default(type="button")
          i.icon-folder-open
  .g-validation-failed-message
  button.g-submit-assetstore-import.btn.btn-success(type="submit")
    i.icon-link-ext
    |  Begin import
